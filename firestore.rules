
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == 'hameed234934@gmail.com';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isOwner(userId);
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /orders/{orderId} {
      allow read, list, update: if isAdmin() || isOwner(resource.data.userId);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can write to the "products" folder
    match /products/{allPaths=**} {
      allow read: if true; // Allow anyone to read product images/videos
      allow write: if request.auth != null && isAdmin(); // Only admins can upload/delete product media
    }
  }
}
